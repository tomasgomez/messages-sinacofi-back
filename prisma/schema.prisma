// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://sinacofi:hola123@34.135.68.241:5432/message"
}

model Family {
  id           String   @id @default(uuid())
  name         String   @unique @db.VarChar(255)
  institutions String[]

  messages Message[]
}

model Message {
  id           String  @id @default(uuid())
  TSN          Int?    @unique @default(autoincrement())
  OSN          Int?    @unique @default(autoincrement())
  NSE          Int?    @unique @default(autoincrement())
  messageCode  String?
  description  String?
  priority     String?
  status       String?
  sender       String?
  creationDate String?
  creationTime String?
  receiver     String?
  receivedDate String?
  receivedTime String?
  documents    String?
  actions      String?

  parameters Json?

  families Family[]
}

model MessageFamily {
  messageId  String
  familyId   String
  assignedAt DateTime @default(now())

  @@id([messageId, familyId])
}
